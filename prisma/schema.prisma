generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URL_NO_SSL")
}
model Product {
  id        Int           @id @default(autoincrement())
  title      String
  image      String
  price     Float
  description String
  description2 String
  procedure String
  subCategoryId Int
  category  SubCategory @relation(fields: [subCategoryId], references: [id])
}

model SubCategory {
  id   Int    @id @default(autoincrement())
  name String
  products Product[]
}
